{
    "name": "cosmoteer-language-server",
    "description": "A complete language server for Cosmoteer rules",
    "author": "TrustNoOneElse",
    "license": "MIT",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/TrustNoOneElse/cosmoteer-lsp"
    },
    "publisher": "TrustNoOneElse",
    "categories": [],
    "keywords": [
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.75.0"
    },
    "activationEvents": [
        "onLanguage:rules"
    ],
    "pricing": "Free",
    "main": "./client/out/extension",
    "galleryBanner": {
        "color": "#007ACC",
        "theme": "dark"
    },
    "contributes": {
        "languages": [
            {
                "id": "rules",
                "extensions": [
                    ".rules"
                ],
                "aliases": [
                    "Cosmoteer Rules"
                ]
            }
        ],
        "grammars": [
            {
                "language": "rules",
                "scopeName": "source.rules",
                "path": "./syntaxes/rules.tmGrammar.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Cosmoteer Rules Configurations",
            "properties": {
                "cosmoteerLSPRules.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "cosmoteerLSPRules.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "^18.14.6",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "mocha": "^10.3.0",
        "prettier": "3.3.3",
        "typescript": "^5.5.4"
    }
}
